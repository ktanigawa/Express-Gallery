extends ./gallery.jade

block content
  #main-photo
    .row
      .large-12.columns
        h3= photo.author
        .row
          .large-8.columns
            .panel
              img(src="#{photo.link}" alt="Photo 1")
              p= photo.description
          .large-4.columns.show-for-large-up#photos
            for photo in photos
              .panel
                a(href="/gallery/#{photo._id}")
                  p.fade(style="background-image: url('#{photo.link}')")
                  span.author= photo.author