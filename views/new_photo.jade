extends ./gallery.jade

block content
  .row
    .large-12.columns
      h3 Add New Photo
      .section-container.tabs(data-section='')
        section.section
          .content(data-slug='panel1')
            form(action="/gallery", method="POST", class="new_photo_form")
              .row.collapse
                .large-2.columns
                  label.inline Author
                .large-10.columns
                  input#author(type='text', placeholder='Jane Smith', name="author")
              .row.collapse
                .large-2.columns
                  label.inline  Link to Image
                .large-10.columns
                  input#link(type='text', placeholder='http://www.website.com/image.jpg', name="link")
              label Description
              textarea(rows='4', name="description")
              button.radius.button(type='submit') Submit